<com.yyydjk.library.DropDownMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dropDownMenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:ddm_backgroundColor="@color/white"
    app:ddm_divider="@drawable/ddm_divider"
    app:ddm_maskColor="@color/mask_color"
    app:ddm_maxHeightPercent="0.5"
    app:ddm_selectedIcon="@mipmap/drop_down_selected_icon"
    app:ddm_textSelectedColor="@color/drop_down_selected"
    app:ddm_textSize="13sp"
    app:ddm_textUnselectedColor="@color/drop_down_unselected"
    app:ddm_underlineColor="@color/gray"
    app:ddm_unselectedIcon="@mipmap/drop_down_unselected_icon" />
